  "version": "0.2.0",
  "configurations": [
    {
      "name": "cli",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "cwd": "${workspaceFolder}",
      "program": "cmd/cli/main.go",
      // "args": ["task", "-f", "get-osstatus.yaml", "-i", "", "--incluster"],
      "args": ["create", "task", "-i", "get-osstatus.yaml"],
      "env": {}
    },
    {
      "name": "server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "cwd": "${workspaceFolder}",
      "program": "cmd/server/main.go",
      "args": ["-c", "default.toml"],
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "controller",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "cwd": "${workspaceFolder}",
      "program": "main.go",
      "args": [],
      "env": {}
    }
  ]
}
